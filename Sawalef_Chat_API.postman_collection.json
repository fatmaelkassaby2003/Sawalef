{
    "info": {
        "_postman_id": "chat-system-api",
        "name": "Sawalef - Chat System API",
        "description": "Real-time chat system with Pusher integration",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Chat",
            "item": [
                {
                    "name": "1. Start Conversation",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_id\": 2\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/chat/conversations/start",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chat",
                                "conversations",
                                "start"
                            ]
                        },
                        "description": "Start or get existing conversation with another user"
                    },
                    "response": []
                },
                {
                    "name": "2. Get All Conversations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/chat/conversations",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chat",
                                "conversations"
                            ]
                        },
                        "description": "Get all conversations for the authenticated user with unread counts"
                    },
                    "response": []
                },
                {
                    "name": "3. Get Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/chat/conversations/1/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chat",
                                "conversations",
                                "1",
                                "messages"
                            ]
                        },
                        "description": "Get all messages for a specific conversation"
                    },
                    "response": []
                },
                {
                    "name": "4. Send Message",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"message\": \"ŸÖÿ±ÿ≠ÿ®ÿßŸã! ŸÉŸäŸÅ ÿ≠ÿßŸÑŸÉÿü üëã\",\n    \"type\": \"text\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/api/chat/conversations/1/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "chat",
                                "conversations",
                                "1",
                                "messages"
                            ]
                        },
                        "description": "Send a new message (will broadcast via Pusher)"
                    },
                    "response": []
                }
            ],
            "description": "Chat endpoints for real-time messaging"
        },
