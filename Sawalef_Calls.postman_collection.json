{
    "info": {
        "_postman_id": "sawalef-calls-flow",
        "name": "Sawalef Calls Flow",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Start Call",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"receiver_id\": 5,\n    \"type\": \"voice\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/calls/start",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "calls",
                        "start"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "2. Accept Call (Receiver)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{receiver_token}}",
                        "type": "text"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"channel_name\": \"call_1_5\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/calls/accept",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "calls",
                        "accept"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "3. Join Call (Get Token)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"channel_name\": \"call_1_5\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/calls/join",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "calls",
                        "join"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "4. End Call",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n    \"channel_name\": \"call_1_5\",\n    \"reason\": \"ended\"\n}",
                    "options": {
                        "raw": {
                            "language": "json"
                        }
                    }
                },
                "url": {
                    "raw": "{{base_url}}/api/calls/end",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "calls",
                        "end"
                    ]
                }
            },
            "response": []
        },
        {
            "name": "Get Call History",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}",
                        "type": "text"
                    },
                    {
                        "key": "Accept",
                        "value": "application/json",
                        "type": "text"
                    }
                ],
                "url": {
                    "raw": "{{base_url}}/api/calls/history",
                    "host": [
                        "{{base_url}}"
                    ],
                    "path": [
                        "api",
                        "calls",
                        "history"
                    ]
                }
            },
            "response": []
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000"
        }
    ]
}