                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.environment.set(\"auth_token\", jsonData.token);",
                                    "    pm.environment.set(\"user_id\", jsonData.user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
