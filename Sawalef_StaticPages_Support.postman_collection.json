{
    "info": {
        "_postman_id": "c1d2e3f4-g5h6-7i8j-9k0l-m1n2o3p4q5r6",
        "name": "Sawalef Static Pages & Support",
        "description": "Collection for Static Pages (Terms, Privacy, About, FAQs) and Support Tickets",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Static Pages",
            "item": [
                {
                    "name": "Get Terms and Conditions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/terms",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "terms"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Privacy Policy",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/privacy-policy",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "privacy-policy"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get About App",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/about-app",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "about-app"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get FAQs",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/faqs",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "faqs"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Support",
            "item": [
                {
                    "name": "Get Issue Types",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/issue-types",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "issue-types"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Submit Support Ticket",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "description": "Optional: Only if user is logged in",
                                "disabled": true
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"issue_type_id\": 1,\n    \"message\": \"عندي مشكلة في التطبيق\",\n    \"name\": \"اسم المستخدم\",\n    \"email\": \"user@example.com\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/support/tickets",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "support",
                                "tickets"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    ""
                ]
            }
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN",
            "type": "string"
        }
    ]
}